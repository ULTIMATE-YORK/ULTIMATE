<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="TOP_LEFT" prefWidth="600" prefHeight="600" fx:controller="controllers.SynthesisRunBoxController">
	
	<padding>
		<Insets top="10" right="10" bottom="10" left="10"/>
	</padding>

	<Label text="Run Details" />
	<ListView fx:id="details" />
	
	<Label text="Solutions" />
	<ListView fx:id="solutions" />
	
	<HBox alignment="CENTER" spacing="10.0" >
		<Button fx:id="plotButton" text="Plot" onAction="#plot" />
		<Button fx:id="exportButton" text="Export" onAction="#export" />
		<Button fx:id="closeButton" text="Close" onAction="#close" />
	</HBox>
	
</VBox>
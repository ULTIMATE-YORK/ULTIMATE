<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<Tab text="Properties" xmlns:fx="http://javafx.com/fxml"
	fx:controller="controllers.PropertiesController">

	<!-- This GridPane is a 1x1 grid where the HBox should expand to fill the space -->
	<GridPane hgap="10" vgap="10">

		<columnConstraints>
			<ColumnConstraints hgrow="ALWAYS" />
			<ColumnConstraints hgrow="ALWAYS" />
		</columnConstraints>

		<!-- Row Constraints: First row is fixed height, second row will grow to fill available
		space -->
		<rowConstraints>
			<RowConstraints vgrow="ALWAYS" />
		</rowConstraints>

		<VBox VBox.vgrow="ALWAYS" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">

			<GridPane.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
			</GridPane.margin>

			<HBox alignment="CENTER" spacing="10.0">
				<Label text="Properties of Selected Model" />
				<Button fx:id="addProperty" onAction="#addProperty" mnemonicParsing="false" text="+" />
				<Button fx:id="scrollUp" onAction="#scrollUp" mnemonicParsing="false" text="↑" />
				<Button fx:id="scrollDown" onAction="#scrollDown" mnemonicParsing="false" text="↓" />
			</HBox>

			<VBox VBox.vgrow="ALWAYS" spacing="10.0">
				<ListView fx:id="propertyListView" VBox.vgrow="ALWAYS" />
			</VBox>

			<HBox alignment="CENTER" spacing="10.0">
				<Label text="Synthesis Objectives of Selected Model" />
				<Button fx:id="addSynthesisObjective" onAction="#addSynthesisObjective" mnemonicParsing="false" text="+" />
				<Button fx:id="removeSynthesisObjective" onAction="#removeSynthesisObjective" mnemonicParsing="false" text="X" />
				<!-- <Button fx:id="scrollUp" onAction="#scrollUp" mnemonicParsing="false" text="↑" />
				<Button fx:id="scrollDown" onAction="#scrollDown" mnemonicParsing="false" text="↓" /> -->
			</HBox>
			<VBox VBox.vgrow="ALWAYS" spacing="10.0">
				<ListView fx:id="synthesisListView" VBox.vgrow="ALWAYS" />
			</VBox>

		</VBox>

		<VBox VBox.vgrow="ALWAYS" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">

			<GridPane.margin>
				<Insets bottom="10.0" left="0.0" right="10.0" top="10.0" />
			</GridPane.margin>

			<HBox alignment="CENTER" spacing="10.0">
				<Label text="Verification Results"/>
				<Button fx:id="verifyButton" onAction="#verify" text="Verify Selected Property" />
				<!-- <CheckBox fx:id="plotSynthesisCheckBox" text="Show Synthesis Pareto Front" selected="true"/> -->
				<!-- <CheckBox fx:id="showAllResults" text="Show Results from Other Models" selected="true" /> -->
				<!-- <Button fx:id="plotButton" onAction="#plotResults" mnemonicParsing="false"
					text="Plot results" visible="true" />
				<Button fx:id="exportButton" onAction="#exportResults" mnemonicParsing="false"
					text="Export to CSV" visible="true" /> -->
			</HBox>
			<StackPane VBox.vgrow="ALWAYS">
				<!-- The main text area for displaying verification results -->
				<ListView fx:id="verificationRunsView" VBox.vgrow="ALWAYS" />

				<!-- The loading spinner, initially hidden -->
				<ProgressIndicator fx:id="progressIndicatorVerification" visible="false" maxWidth="50"
					maxHeight="50" />
			</StackPane>

			<HBox alignment="CENTER" spacing="10.0">
				<Label text="Synthesis Results"/>
				<Button fx:id="synthesisButton" onAction="#synthesise" text="Run Synthesis" />

			</HBox>

			<StackPane VBox.vgrow="ALWAYS">
				<!-- The main text area for displaying verification results -->
				<ListView fx:id="synthesisRunsView" VBox.vgrow="ALWAYS" />

				<!-- The loading spinner, initially hidden -->
				<ProgressIndicator fx:id="progressIndicatorSynthesis" visible="false" maxWidth="50"
					maxHeight="50" />
			</StackPane>

		</VBox>

	</GridPane>

</Tab>